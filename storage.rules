rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users (for viewing images)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // TEMPORARY: Allow all uploads to pole-tracker folder during development
    // TODO: Change back to require auth when real authentication is implemented
    match /pole-tracker/{poleId}/{fileName} {
      allow write: if request.resource.size < 10 * 1024 * 1024 // 10MB limit
        && request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // TEMPORARY: Allow CSV uploads during development (mock auth mode)
    // TODO: Change back to require auth when real authentication is implemented
    match /csv-uploads/{fileName} {
      allow read: if true;  // Development mode - allow all reads
      allow write: if request.resource.size < 100 * 1024 * 1024;  // Max 100MB, no auth required
    }
    
    // Allow authenticated users to upload pole photos for image processing
    match /images/pole-photos/{site}/{project}/{batch}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 50 * 1024 * 1024  // Max 50MB per image
        && request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // TEMPORARY: Allow poles folder uploads during development (mock auth mode)
    // This covers both poles/draft and poles/staging paths used by mobile capture
    match /poles/{allPaths=**} {
      allow read: if true;  // Development mode - allow all reads
      allow write: if request.resource.size < 10 * 1024 * 1024  // Max 10MB per image
        && request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // Allow authenticated users to manage their own uploads
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}