#!/usr/bin/env python3
"""
FibreFlow AI Context Manager
Simple wrapper for the CLI
"""

import sys
import os

# Get the directory where this script is located
script_dir = os.path.dirname(os.path.abspath(__file__))

# Run the CLI with all arguments passed through
# Properly quote arguments to handle spaces
import subprocess
subprocess.run([sys.executable, f"{script_dir}/cli/ai_cli.py"] + sys.argv[1:])