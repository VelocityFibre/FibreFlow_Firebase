# FibreFlow Neon Query Agent - Environment Configuration Template
# Copy this to .env.local and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Neon Database Configuration
NEON_CONNECTION_STRING=postgresql://ai_agent:your-password@your-project.neon.tech/your-database
NEON_PROJECT_ID=your-neon-project-id
NEON_API_KEY=your-neon-api-key

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Security
SECRET_KEY=your-secret-key-for-jwt-tokens

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# FibreFlow Integration
FIBREFLOW_BASE_URL=https://fibreflow-73daf.web.app
FIREBASE_PROJECT_ID=fibreflow-73daf

# Development Settings
ENVIRONMENT=development
ENABLE_QUERY_CACHING=true
ENABLE_SANDBOX_BRANCHING=true
MAX_QUERY_RESULTS=100